<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>Authorization.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SaleFilter</filter-name>
        <filter-class>Authorization.SaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/userlist</url-pattern>
        <url-pattern>/addUser</url-pattern>
        <url-pattern>/userDetail</url-pattern>
        <url-pattern>/userEdit</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SaleFilter</filter-name>
        <url-pattern>/pageOrdersServletBySale/*</url-pattern>
        <url-pattern>/detailOrderForSaleServlet/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CustomerFilter</filter-name>
        <filter-class>Authorization.CustomerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/changepass.jsp</url-pattern>
        <url-pattern>/editprofile.jsp</url-pattern>
        <url-pattern>/profile.jsp</url-pattern>
        <url-pattern>/OrderDetail_1.jsp</url-pattern>
        <url-pattern>/checkout.jsp</url-pattern>
        <url-pattern>/order</url-pattern>
        <url-pattern>/orderDetail</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MarketingFilter</filter-name>
        <filter-class>Authorization.MarketingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MarketingFilter</filter-name>
        <url-pattern>/post.jsp</url-pattern>
        <url-pattern>/post</url-pattern>
    </filter-mapping>
    
    
    <servlet>
        <servlet-name>pageOrdersServletBySale</servlet-name>
        <servlet-class>controller.saleN.pageOrdersServletBySale</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pageOrdersServletBySale</servlet-name>
        <url-pattern>/pageOrdersServletBySale</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>controller.HomePage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserList</servlet-name>
        <servlet-class>controller.User.UserList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserList</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>